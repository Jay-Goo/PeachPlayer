<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:background="@color/colorMediaControlBackground"
    >
    <SeekBar
        android:id="@+id/controller_seekBar_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="30dp"
        android:max="100"
        android:minHeight="2dp"
        android:maxHeight="2dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:thumbOffset="0dp"
        android:progressDrawable="@drawable/custom_video_seekbar_background"
        android:thumb="@drawable/custom_seekbar_thumb"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/controller_iv_pause"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:src="@drawable/video_pause" />

        <TextView
            android:id="@+id/controller_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/controller_iv_pause"
            android:layout_centerVertical="true"
            android:text="00:00 / 00:00"/>
        <ImageView
            android:id="@+id/controller_iv_fullScreen"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="8dp"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_video_fullscreen" />
    </RelativeLayout>


</FrameLayout>
